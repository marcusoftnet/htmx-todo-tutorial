<div
  class="form-group <%= errormessage ? "error" : ""  %>"
  hx-target="this"
  hx-swap="outerHTML">

  <% if(errormessage) {%>
    <span class="error-message" id="title-error">
      <%= errormessage -%>
    </span>
  <% } %>

  <input
    class="<%= errormessage ? "error" : ""  %>"
    type="text"
    name="title"
    placeholder="Title"
    required
    hx-post="/todo/title"
    value="<%= title %>"/>
</div>