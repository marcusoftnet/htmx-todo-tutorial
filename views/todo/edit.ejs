<form id="todo-form">
  <input type="text" name="title" required value="<%= todo.title %>" />
  <input type="date" name="duedate" required value="<%= todo.duedate %>" />
  <button
    type="submit"
    hx-put="/todo/<%= todo.id %>"
    hx-target="closest .todo-item"
    hx-swap="outerHTML"
  >
    Update
  </button>
  <button
    class="cancel-button"
    type="submit"
    hx-get="/todo/<%= todo.id %>"
    hx-target="closest .todo-item"
    hx-swap="outerHTML"
  >
    Cancel
  </button>
</form>
